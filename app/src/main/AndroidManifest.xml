<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="top.totoro.linkcollection.android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:theme="@style/AppLoadingTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.LoginActivity"
            android:label="@string/login_title" />
        <activity
            android:name=".ui.RegisterActivity"
            android:label="@string/register_title" />
        <activity
            android:name=".ui.ShowActivity"
            android:label="@string/show_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.ForgotPwdActivity"
            android:label="@string/update_pwd_title" />
        <activity
            android:name=".ui.CheckMailActivity"
            android:label="@string/check_mail_title" />
        <activity
            android:name=".fragment.ChooseLovesFragment"
            android:label="@string/choose_loves_title" />
        <activity
            android:name=".ui.WebActivity"
            android:label="@string/web_title"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>